# Social Media API Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API (Required for AI analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Vector Store Configuration
VS_REPORTS_STORE_ID=your_vector_store_id_here

# Reddit API Configuration (Required for Reddit data)
# Get your API key from your Reddit Comment Analysis API service
REDDIT_API_KEY=your_reddit_api_key_here

# Facebook Groups API Configuration (Required for Facebook data)
# Get your API key from your Facebook Groups Analysis API service
FACEBOOK_API_KEY=your_facebook_api_key_here

# Social Media API Keys (Optional)
YOUTUBE_API_KEY=your_youtube_api_key_here
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here

# Data Refresh Configuration
DATA_REFRESH_INTERVAL_DAYS=7
MAX_BACKUPS=10

# Rate Limiting (requests per minute)
REDDIT_RATE_LIMIT=60
YOUTUBE_RATE_LIMIT=100
FACEBOOK_RATE_LIMIT=200

# Data Collection Settings
COLLECTION_TIMEFRAME=month
MAX_POSTS_PER_PLATFORM=1000
MIN_CONTENT_LENGTH=20
MAX_CONTENT_LENGTH=5000
